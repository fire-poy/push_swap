int	ft_brk(t_stack *a, t_stack *b)
{
	if (b->size == 1)
	{
		oper("pb", a, b);
		return (1);
	}
	return (0);
}

void	petit_choix(t_stack *a, t_stack *b)
{
	int	t;
	int	tn;
	int	bt;

	t = a->top->value ; 
	tn = a->top->next->value;  
	bt = a->bot->value;
	{
		if (t <= tn && t <= bt)
		{
			oper("pa", a, b);
			return ;
		}
		if (tn <= t && tn <= bt)
		{
			oper("sa", a, b);
			if (is_sorted(a->top))
				return ;
			oper("pa", a, b);
			return ;
		}
		if (bt <= t && bt <= tn)
		{
			oper("ra", a, b);
			if (is_sorted(a->top))
				return ;
			oper("pa", a, b);
			return ;
		}
	}
}

void	big_choix(t_stack *a, t_stack *b)
{
//	print_stack(b, 'b');
	if (ft_brk(a, b))
		return;
	if (b->top->value >= b->top->next->value && b->top->value >= b->bot->value)
		oper("pb", a, b);
	if (ft_brk(a, b))
		return;
	if (b->top->next->value >= b->top->value && b->top->next->value >= b->bot->value)
	{
		oper("sb", a, b);
		oper("pb", a, b);
	}
	if (ft_brk(a, b))
		return;
	if (b->bot->value >= b->top->value && b->bot->value >= b->top->next->value)
	{
		oper("rb", a, b);
		oper("pb", a, b);
	}
	if (ft_brk(a, b))
		return;
}

//choix plus pres
void	choix_pp(t_stack *a, t_stack *b)
{
    while (1)
	{
		while (a->size > 1)
		{
			if (is_sorted(a->top))
				return ;
			petit_choix(a, b);
//			print_stack(a, 'a');
//			print_stack(b, 'b');
		}
		oper("pa", a, b);
		while (b->size > 0)
			big_choix(a, b);
		if (is_sorted(a->top))
			return ;
	}
}
